<div class="mainHeader">
    <h1>Add a Driver</h1>
</div>
<form class="editForm" action="/drivers/driversDashboard?_method=PUT%>" method="POST">
    <div class="eachentry">
        <label class="newItems">Name</label>
        <input class="input" type="text" name="name" value=<%=driver.name%>>
    </div>
    <div class="eachentry">
        <label class="newItems">Img Link</label>
        <input class="input" type="text" name="img"  value=<%=driver.img%>>
    </div>
    <div class="eachentry">
        <label class="newItems">Email</label>
        <input class="input" type="text" name="email"  value=<%=driver.email%>>
    </div>
    <div class="eachentry">
        <label class="newItems">Age</label>
        <input class="input" type="number" name="age"  value=<%=driver.age%>>
    </div>
    <div class="eachentry">
        <label class="newItems">Years of Experience</label>
        <input class="input" type="number" name="years_experience"  value=<%=driver.years_experience%>>
    </div>
    <div class="eachentry">
        <label class="newItems">Certified</label>
        <select data-style="btn-info" name="certified"  value=<%=driver.certified%>>
        <option value="true">True</option>
        <option value="false">False</option>
    </select> 
    </div>
    <div class="eachentry">
        <label class="newItems">Availability(Days)</label>
        <input class="input" type="text" name="days_available"  value=<%=driver.days_available%>>
    </div>
    <input class="editDriver" type="submit" value="Update Driver">
</form>